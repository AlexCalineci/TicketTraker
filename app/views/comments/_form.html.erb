<div class="tabel">
<%= simple_form_for @comment,:url => ticket_comment_path(params[:ticket_id],params[:id]) ,:html => { :class => 'form-horizontal' } do |f| %>
	
	<div style="display: inline-block; padding :10px">  
	 <%=  f.input :text,as: :text,:input_html => {:style=> 'width: 500px; height: 300px'},label: false%>
	</div>
	<div style="display: inline-block; padding :10px">	
		<%= f.input  :user_post ,:input_html => { :value => current_user.username} ,disabled: true %></div>
	<div style="display: inline-block"> 
		<%= f.input  :user_id,as: :hidden ,:input_html => { :value => current_user.id,:style => 'width: 70px'},:disabled=>false%>
	</div>
	

  <div class="form-actions">
		<%= button_tag(:type => 'submit', :class => 'btn btn-small btn-primary') do %>
					Post IT <i class="icon-thumbs-up icon-large"></i>
			<% end %>
    <%= link_to 'Cancel IT <i class="icon-thumbs-down icon-large"></i>'.html_safe,
                comments_by_tickets_path(params[:ticket_id]), :class => 'btn btn-small' %>
  </div>
<% end %>
</div>
